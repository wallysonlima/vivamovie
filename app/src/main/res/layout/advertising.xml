<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/imageViewCaptain"
        android:layout_width="173dp"
        android:layout_height="183dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/captainmarvel_foreground" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="164dp"
        android:layout_height="81dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="28dp"
        android:text="@string/captain"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewConferir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewConferir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conferir"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="139dp" />
</androidx.constraintlayout.widget.ConstraintLayout>